		}
		return splited;
	}

	public String splitDate(String s) {
		try{
		if (((s).length()) != 0) {
			String array[] = s.split("-");
			String s0 = array[0];
			String s1 = array[1];
			String s2 = array[2];
			s = (s2 + "/" + s1 + "/" + s0);
			}
		}catch(Exception e) {
			 System.out.println("Preencha a data corretamente");  
	          e.printStackTrace();
		}
		return s;

	}
	 public String joinDate(String o){
		 try{
		 if (((o).length()) != 0) {
			 String array [] = o.split("/");
